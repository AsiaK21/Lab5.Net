@model int
@{
    int maxStars = 5;
    int filledStars = Model;
    int emptyStars = maxStars - filledStars;
}

@for (int i = 0; i < filledStars; i++)
{
    <span title="@Model">&#x2605;</span>
}

@for (int i = 0; i < emptyStars; i++)
{
    <span title="@Model">&#x2606;</span>
}



